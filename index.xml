<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>–î–ª—è —Ç–µ–±—è ‚ù§Ô∏è</title>
    <style>
        :root {
            --primary-color: #ff4d6d;
            --glass-bg: rgba(255, 255, 255, 0.85);
        }

        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
            /* –£–±–µ–¥–∏—Å—å, —á—Ç–æ —Ñ–∞–π–ª bg.jpg –ª–µ–∂–∏—Ç –≤ —Ç–æ–π –∂–µ –ø–∞–ø–∫–µ –Ω–∞ GitHub */
            background: url('bg.PNG') no-repeat center center/cover;
            overflow: hidden;
        }

        .card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            text-align: center;
            max-width: 350px;
            width: 85%;
            z-index: 10;
        }

        h1 { color: #c9184a; font-size: 24px; margin-bottom: 20px; }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
            min-height: 50px;
        }

        button {
            padding: 12px 25px;
            font-size: 18px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        #yesBtn {
            background-color: var(--primary-color);
            color: white;
        }

        #noBtn {
            background-color: #adb5bd;
            color: white;
            position: absolute; /* –ù—É–∂–Ω–æ –¥–ª—è —É–±–µ–≥–∞–Ω–∏—è */
        }

        .hidden { display: none; }

        .celebration img {
            width: 100%;
            border-radius: 15px;
            margin: 15px 0;
        }

        .celebration p {
            font-size: 18px;
            color: #590d22;
        }
    </style>
</head>
<body>

    <div class="card" id="mainCard">
        <div id="questionArea">
            <h1>–¢—ã –±—É–¥–µ—à—å –º–æ–µ–π –í–∞–ª–µ–Ω—Ç–∏–Ω–∫–æ–π? ‚ù§Ô∏è</h1>
            <div class="btn-group">
                <button id="yesBtn">–î–ê!</button>
                <button id="noBtn">–ù–µ—Ç</button>
            </div>
        </div>

        <div id="answerArea" class="hidden">
            <div class="celebration">
                <h1>–£—Ä–∞–∞–∞! üòç</h1>
                <img src="photo.jpg" alt="–ù–∞—à–∞ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—è">
                <p>–Ø —Å–∞–º—ã–π —Å—á–∞—Å—Ç–ª–∏–≤—ã–π —á–µ–ª–æ–≤–µ–∫! <br> –° –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–º, –ª—é–±–∏–º–∞—è! ‚ú®</p>
            </div>
        </div>
    </div>

    <audio id="bgMusic" src="music.mp3" loop></audio>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const questionArea = document.getElementById('questionArea');
        const answerArea = document.getElementById('answerArea');
        const music = document.getElementById('bgMusic');

        // –ö–Ω–æ–ø–∫–∞ "–ù–µ—Ç" —É–±–µ–≥–∞–µ—Ç
        function moveButton() {
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        noBtn.addEventListener('mouseenter', moveButton);
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveButton();
        });

        // –ö–Ω–æ–ø–∫–∞ "–î–∞"
        yesBtn.addEventListener('click', () => {
            questionArea.classList.add('hidden');
            answerArea.classList.remove('hidden');
            
            // –ü—ã—Ç–∞–µ–º—Å—è –≤–∫–ª—é—á–∏—Ç—å –º—É–∑—ã–∫—É
            music.play().catch(error => {
                console.log("–ê–≤—Ç–æ–≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω–æ –±—Ä–∞—É–∑–µ—Ä–æ–º");
            });
        });
    </script>
</body>
</html>
