<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>–î–ª—è —Ç–µ–±—è ‚ù§Ô∏è</title>
    <style>
        root {
            --primary-color: #ff4d6d;
            --glass-bg: rgba(255, 255, 255, 0.8);
        }

        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('bg.jpg') no-repeat center center/cover;
            overflow: hidden;
        }

        .card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            text-align: center;
            max-width: 350px;
            width: 85%;
            z-index: 10;
            position: relative;
        }

        h1 { color: #c9184a; font-size: 24px; margin-bottom: 25px; }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        button {
            padding: 12px 30px;
            font-size: 18px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: transform 0.2s, background 0.3s;
            font-weight: bold;
        }

        #yesBtn {
            background-color: var(--primary-color);
            color: white;
            box-shadow: 0 5px 15px rgba(255, 77, 109, 0.4);
        }

        #noBtn {
            background-color: #adb5bd;
            color: white;
            position: absolute;
        }

        .hidden { display: none; }

        .celebration img {
            width: 100%;
            border-radius: 15px;
            margin: 15px 0;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .celebration p {
            font-size: 18px;
            color: #590d22;
            line-height: 1.5;
        }
    </style>
</head>
<body>

    <div class="card" id="quiz-card">
        <div id="question-area">
            <h1>–¢—ã –±—É–¥–µ—à—å –º–æ–µ–π –í–∞–ª–µ–Ω—Ç–∏–Ω–∫–æ–π? ‚ù§Ô∏è</h1>
            <div class="btn-group">
                <button id="yesBtn">–î–ê!</button>
                <button id="noBtn">–ù–µ—Ç</button>
            </div>
        </div>

        <div id="answer-area" class="hidden" class="celebration">
            <h1>–£—Ä–∞–∞–∞! üòç</h1>
            <img src="photo.jpg" alt="–ú—ã –≤–º–µ—Å—Ç–µ">
            <p>–Ø —Å–∞–º—ã–π —Å—á–∞—Å—Ç–ª–∏–≤—ã–π —á–µ–ª–æ–≤–µ–∫! <br> –° –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–º, –ª—é–±–∏–º–∞—è! ‚ú®</p>
        </div>
    </div>

    <audio id="player" src="music.mp3" loop></audio>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const questionArea = document.getElementById('question-area');
        const answerArea = document.getElementById('answer-area');
        const audio = document.getElementById('player');

        // –õ–æ–≥–∏–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ù–µ—Ç" - –æ–Ω–∞ —É–±–µ–≥–∞–µ—Ç
        const moveButton = () => {
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
            
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        };

        noBtn.addEventListener('mouseenter', moveButton);
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveButton();
        });

        // –õ–æ–≥–∏–∫–∞ –∫–Ω–æ–ø–∫–∏ "–î–∞"
        yesBtn.addEventListener('click', () => {
            questionArea.classList.add('hidden');
            answerArea.classList.remove('hidden');
            audio.play().catch(e => console.log("–ú—É–∑—ã–∫–∞ –∂–¥–µ—Ç –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è"));
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∫–æ–Ω—Ñ–µ—Ç—Ç–∏ (–ø–æ –∂–µ–ª–∞–Ω–∏—é)
            document.body.style.background = "pink";
            setTimeout(() => {
                document.body.style.background = "url('bg.jpg') no-repeat center center/cover";
            }, 2000);
        });
    </script>
</body>
</html>
